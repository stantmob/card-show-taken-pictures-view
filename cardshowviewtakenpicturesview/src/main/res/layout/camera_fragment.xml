<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="br.com.stant.libraries.cardshowviewtakenpicturesview.camera.CameraActivity" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextureView
            android:id="@+id/camera_fragment_texture_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/flash_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/cam_widget_margin_top_sides"
            android:layout_marginTop="@dimen/cam_widget_margin_top"
            android:background="@drawable/circle_white"
            android:padding="1dp">

            <ImageButton
                android:id="@+id/flash_toggle"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/cam_circle_selector"
                android:padding="@dimen/cam_content_inset_secondary"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_flash_off"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/camera_fragment_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="30dp"
            android:animateLayoutChanges="true"
            android:padding="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/x_white_border" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/camera_fragment_capture_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/cam_widget_margin_bottom"
            android:background="@drawable/circle_opaque"
            android:padding="@dimen/cam_content_inset_primary">

            <RelativeLayout
                android:id="@+id/capture_button_secondary_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_white"
                android:padding="1dp">

                <ImageButton
                    android:id="@+id/camera_fragment_capture_image_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cam_circle_selector"
                    android:padding="@dimen/cam_content_inset_secondary"
                    android:scaleType="fitXY"
                    android:src="@drawable/cam_action_stillshot"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>