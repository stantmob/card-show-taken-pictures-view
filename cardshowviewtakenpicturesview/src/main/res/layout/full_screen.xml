<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="br.com.stant.libraries.cameraimagegalleryview.activities.FullScreenImage" />
        <variable
            name="hasError"
            type="boolean" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/full_image_view">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_arrow_left_white"
                app:title=""/>

        </com.google.android.material.appbar.AppBarLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/full_image_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                tools:src="@tools:sample/backgrounds/scenic"
                app:layout_constraintTop_toBottomOf="@+id/appBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/info_box"
                app:layout_constraintVertical_weight="5"
                android:background="@{hasError ? @color/red_blur : @color/light_gray}"
                app:strokeWidth="@{hasError ? 28 : 0}"
                app:strokeColor="@color/dark_red"
                />

            <LinearLayout
                android:id="@+id/error_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/dark_red"
                android:visibility="gone"
                android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@+id/appBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/errors_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/dark_red"
                    android:layout_weight="8"
                    android:scrollbars="vertical"
                    android:textFontWeight="500"
                    android:gravity="top"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:text="Errors" />

                <ImageView
                    android:id="@+id/errors_icon"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical|right|top"
                    android:src="@drawable/ic_top_arrow"/>
            </LinearLayout>


        <LinearLayout
            android:id="@+id/info_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/full_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="1">

            <EditText
                android:id="@+id/caption_edit_text"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="@drawable/shape_caption"
                android:padding="5dp"
                android:focusable="false"
                android:textFontWeight="500"
                android:textSize="18sp"
                android:hint="@string/full_screen.hint_caption"
                tools:text="Caption" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>